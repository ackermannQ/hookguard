{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".", // This is important
    "paths": {
      "@rules/*": ["src/rules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "src/tests"]
}
